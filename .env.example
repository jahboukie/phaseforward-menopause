# Environment Configuration for Ecosystem Intelligence Platform

# API Gateway Configuration
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=localhost

# SSO Service Configuration
SSO_SERVICE_PORT=3001
SSO_SERVICE_HOST=localhost
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Analytics Engine Configuration
ANALYTICS_ENGINE_PORT=3002
ANALYTICS_ENGINE_HOST=localhost

# AI Orchestration Configuration
AI_ORCHESTRATION_PORT=3003
AI_ORCHESTRATION_HOST=localhost

# Provider Dashboard Configuration
PROVIDER_DASHBOARD_PORT=3004
PROVIDER_DASHBOARD_HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ecosystem_intelligence
REDIS_URL=redis://localhost:6379

# Supabase Configuration (consistent with existing apps)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# External App Endpoints (for integration)
MYCONFIDANT_API_URL=https://api.myconfidant.health
DRALEXAI_API_URL=https://api.dralexai.com
SOBERPAL_API_URL=https://api.soberpal.com
INNER_ARCHITECT_API_URL=https://api.innerarchitect.com
MENO_TRACKER_API_URL=https://api.menotracker.com
MENO_PARTNER_API_URL=https://api.menopartner.com
MENO_COMMUNITY_API_URL=https://api.menocommunity.com

# Security Configuration
CORS_ORIGIN=http://localhost:3000,https://myconfidant.health,https://dralexai.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# AI Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Provider Dashboard Configuration
PROVIDER_DASHBOARD_SECRET=your-provider-dashboard-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Monitoring & Analytics
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000
